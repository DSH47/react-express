.context {
  flex-grow: 4;
  display: flex;
  flex-direction: column;
}

.item {
  margin-left: 30rpx;
  width: 650rpx;
  height: 260rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.icon {
  width: 150rpx;
  height: 200rpx;
}

.itemContet {
  margin-left: 30rpx;
  flex: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}

.itemContet .title {
  color: #292929;
  font-size: 35rpx;
}

.itemContet .genres {
  margin-top: 20rpx;
  color: #2929ff;
  font-size: 25rpx;
}

.genresBox {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.genresTitle {
  color: #2929ff;
  font-size: 30rpx;
}

.genresContext {
  margin-left: 20rpx;
  color: #e47d2e;
  font-size: 24rpx;
}
